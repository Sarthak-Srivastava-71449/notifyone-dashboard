{
  "name": "server",
  "version": "1.0.0",
  "description": "Node Server acting proxy for Lara Service (CAD)",
  "main": "dist/index.js",
  "scripts": {
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "windows_clean:node_modules": "RMDIR node_modules /S /Q",
    "linux_clean:node_modules": "rm -rf node_modules",
    "dev": "ts-node-dev ./index.ts",
    "build": "echo “Where there's risk, there's hope.”",
    "build_server": "rimraf dist && tsc",
    "backup": "shx cp -r ./dist ../backup/server_build/",
    "preserve": "npm run build_server",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "npm run build_server",
    "start": "node dist/index.js",
    "turbo_dev": "echo \"I don't know. I can't tell the future! I just work there.\"",
    "npm:install": "cd ../ && pwd &&  npm i -w server"
  },
  "keywords": [],
  "author": "Animesh Singh",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.26.0",
    "common": "*",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-http-proxy": "^1.6.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rotating-file-stream": "^3.0.4",
    "shx": "^0.3.4",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-http-proxy": "^1.6.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.5"
  }
}
